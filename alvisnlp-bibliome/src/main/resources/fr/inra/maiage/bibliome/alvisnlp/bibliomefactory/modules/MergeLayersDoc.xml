<alvisnlp-doc author="Robert Bossy" date="2010-10-28">
	<synopsis>
		<p>Creates a new layer in each section containing all annotations in
			source layers.</p>
	</synopsis>

	<module-doc>
		<description>
			<p>
				<this/>
				adds annotations in the layers
				<param>sourceLayers</param>
				into the layer
				<param>targetLayer</param>
				.
			</p>
		</description>

		<param-doc name="sourceLayers">
			<p>Name of the layers where to get annotations.</p>
		</param-doc>
<param-doc name="sourceLayerNames"><p>Deprecated alias for <param>sourceLayers</param>.</p></param-doc>

		<param-doc name="targetLayer">
			<p>Name of the layer to create.</p>
		</param-doc>
<param-doc name="targetLayerName"><p>Deprecated alias for <param>targetLayer</param>.</p></param-doc>

    <include-doc>fr.inra.maiage.bibliome.alvisnlp.bibliomefactory.modules.SectionModuleParamsDoc</include-doc>
	</module-doc>
</alvisnlp-doc>
