<synopsis>
  <p>Mathematical functions.</p>
</synopsis>

  <library-doc>
    <function-doc first-ftor="abs" synopsis="m:abs(N)">
      <p>Returns the absolute value of <em>N</em> evaluated as an integer.</p>
    </function-doc>
  
    <function-doc first-ftor="absd" synopsis="m:absd(N)">
      <p>Returns the absolute value of <em>N</em> evaluated as a double.</p>
    </function-doc>

    <function-doc first-ftor="exp" synopsis="m:exp(N)">
      <p>Returns Euler's number <em>e</em> raised to the power of <em>N</em> evaluated as a double.</p>
    </function-doc>

    <function-doc first-ftor="log" synopsis="m:log(N)">
      <p>Returns the base 10 logarithm of <em>N</em> evaluated as a double.</p>
    </function-doc>

    <function-doc first-ftor="logn" synopsis="m:logn(N)">
      <p>Returns the natural logarithm (base <em>e</em>) of <em>N</em> evaluated as a double.</p>
    </function-doc>

    <function-doc first-ftor="min" synopsis="m:min(N, M)">
      <p>Returns the smaller of <em>N</em> and <em>M</em> evaluated as integers.</p>
    </function-doc>
  
    <function-doc first-ftor="max" synopsis="m:max(N, M)">
      <p>Returns the greater of <em>N</em> and <em>M</em> evaluated as integers.</p>
    </function-doc>

    <function-doc first-ftor="mind" synopsis="m:mind(N, M)">
      <p>Returns the smaller of <em>N</em> and <em>M</em> evaluated as doubles.</p>
    </function-doc>

    <function-doc first-ftor="maxd" synopsis="m:maxd(N, M)">
      <p>Returns the greater of <em>N</em> and <em>M</em> evaluated as doubles.</p>
    </function-doc>

    <function-doc first-ftor="sqrt" synopsis="m:sqrt(N)">
      <p>Returns the positive square root of <em>N</em> evaluated as a double.</p>
    </function-doc>

    <function-doc first-ftor="pow" synopsis="m:pow(N, M)">
      <p>Returns <em>N</em> evaluated as a double raised to the power of <em>M</em> evaluated as a double.</p>
    </function-doc>

    <function-doc first-ftor="sum" synopsis="m:sum(ELTS, VALUE)">
      <p>Evaluates <em>ELTS</em> as a list of elements, and for each member, evaluates <em>VALUE</em> as an integer. Returns the sum.</p>
    </function-doc>

    <function-doc first-ftor="sumd" synopsis="m:sumd(ELTS, VALUE)">
      <p>Evaluates <em>ELTS</em> as a list of elements, and for each member, evaluates <em>VALUE</em> as a double. Returns the sum.</p>
    </function-doc>

    <function-doc first-ftor="prod" synopsis="m:prod(ELTS, VALUE)">
      <p>Evaluates <em>ELTS</em> as a list of elements, and for each member, evaluates <em>VALUE</em> as a double. Returns the product.</p>
    </function-doc>

    <function-doc first-ftor="prodi" synopsis="m:prodi(ELTS, VALUE)">
      <p>Evaluates <em>ELTS</em> as a list of elements, and for each member, evaluates <em>VALUE</em> as an integer. Returns the product.</p>
    </function-doc>

    <function-doc first-ftor="hypot" synopsis="m:hypot(N, M)">
      <p>Evaluates <em>N</em> and <em>M</em> as doubles and returns their hypothenuse.</p>
    </function-doc>
    
    <function-doc first-ftor="mmin" synopsis="m:mmin(elements, value)">
    	<p>Evaluates <em>elements</em> as a list of elements. For each element evaluates <em>value</em> as an integer. Returns the lowest value.</p>
    </function-doc>
    
    <function-doc first-ftor="mmax" synopsis="m:mmax(elements, value)">
    	<p>Evaluates <em>elements</em> as a list of elements. For each element evaluates <em>value</em> as an integer. Returns the highest value.</p>
    </function-doc>
    
    <function-doc first-ftor="mmind" synopsis="m:mmind(elements, value)">
    	<p>Evaluates <em>elements</em> as a list of elements. For each element evaluates <em>value</em> as a double. Returns the lowest value.</p>
    </function-doc>
    
    <function-doc first-ftor="mmaxd" synopsis="m:mmaxd(elements, value)">
    	<p>Evaluates <em>elements</em> as a list of elements. For each element evaluates <em>value</em> as a double. Returns the highest value.</p>
    </function-doc>
    
    <function-doc first-ftor="ceil" synopsis="m:ceil(value)">
    	<p><a href="file:///home/rbossy/dist/jdk1.7.0_71/docs/api/java/lang/Math.html#ceil(double)">java.lang.Math.ceil</a></p>
    </function-doc>
    
    <function-doc first-ftor="round" synopsis="m:round(value)">
    	<p><a href="file:///home/rbossy/dist/jdk1.7.0_71/docs/api/java/lang/Math.html#ceil(double)">java.lang.Math.round</a></p>
    </function-doc>
    
    <function-doc first-ftor="floor" synopsis="m:floor(value)">
    	<p><a href="file:///home/rbossy/dist/jdk1.7.0_71/docs/api/java/lang/Math.html#ceil(double)">java.lang.Math.floor</a></p>
    </function-doc>
  </library-doc>
</alvisnlp-doc>
